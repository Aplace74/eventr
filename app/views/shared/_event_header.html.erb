<div id="event-header" style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.2)), 
  url('<%= @event.picture.url.nil? ? asset_url("default-event.jpg") :  cl_image_path(@event.picture) %>');">
  <div class="container">
    <div>
      <h2><%= event.title %></h2>
      <p>
        <strong>Date:</strong>
        <%= event.start_date %> au <%= event.end_date %>
      </p>
      <p><%= event.address %></p>
    </div>
    <div class="map">
    <%= link_to("https://www.google.com/maps/search/#{map_url}", target: "_blank") do %>
      <span class="fa-stack fa-2x mb-2">
      <i class="fas fa-circle fa-stack-2x"></i>
      <i class="fas fa-map-marked-alt fa-stack-1x fa-inverse"></i>
      </span>
    <%end%>
    <%= link_to(agenda_url, target: "_blank") do %>
      <span class="fa-stack fa-2x mb-2">
      <i class="fas fa-circle fa-stack-2x"></i>
      <i class="fas fa-calendar-alt fa-stack-1x fa-inverse"></i>
      </span>
    <%end%>
    </div>
  </div>
  <% if current_user == event.user %>
    <%= link_to event_path(event), method: :delete, data: { confirm: "Lévènement va être supprimé !" }, class: "btn-base btn-danger" do %>
      Annuler l'évènement
    <% end %>
  <% end %>
</div>