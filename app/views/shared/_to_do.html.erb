<div class="container">
	<section class="todo">
		<h2>Ma liste</h2>
		<ul class="todo-list">
			<% contributions.each do |contribution| %>
				<% id = contribution.id %>
				<% if contribution.state %>
					<li>
						<input type="checkbox" id="<%= id %>" checked/>
						<label class="toggle" for="<%= id %>"></label>
            <%= "#{contribution.part} x " if contribution.supply.quantity > 1 %>
						<%= contribution.supply.title %>
					</li>
				<% else %>
					<li>
						<input type="checkbox" id="<%= id %>"/>
						<label class="toggle" for="<%= id %>"></label>
						<%= "#{contribution.part} x " if contribution.supply.quantity > 1 %>
						<%= contribution.supply.title %>
					</li>
				<% end %>
			<% end %>
		</ul>
	</section>
</div>
