<div class="banner_home">
    <div class="title text-center">
      <h2>Créer un événement</h2>
    </div>

    <div class="form">
      <%= simple_form_for [@event] do |f| %>
        <div class="form-inputs">
            <%= f.input :title,
                        placeholder: "Title",
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "Title" } %>
            <%= f.input :start_date,
                        as: :string,
                        placeholder: "Date début",
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { class: "datepicker" } %>
            <%= f.input :end_date,
                        as: :string,
                        placeholder: "Date début",
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { class: "datepicker" } %>
            <%= f.input :description,
                        placeholder: "Description",
                        label: false,
                        required: true,
                        autofocus: true,
                      input_html: { autocomplete: "Description" } %>  
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Créer l'événement", class:"btn-base btn-green btn-large" %>
        </div>
      <% end %>
    </div>
</div>  