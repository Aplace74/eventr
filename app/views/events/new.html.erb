<div class="new">

    <h1>Créer un événement</h1>

    <div>
      <%= simple_form_for [@event] do |f| %>
        <div class="form-inputs text-center">
            <%= f.input :title,
                        placeholder: "Titre de l'événement",
                        label: false,
                        required: true,
                        autofocus: true %>
            <%= f.input :address,
                        placeholder: "Adresse",
                        label: false,
                        required: true,
                        autofocus: true %>
            <%= f.input :zipcode,
                        placeholder: "Code postal",
                        label: false,
                        required: true,
                        autofocus: true %>
            <%= f.input :city,
                        placeholder: "Ville",
                        label: false,
                        required: true,
                        autofocus: true %>
            <%= f.input :start_date,
                        as: :string,
                        placeholder: "Date début",
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { class: "datepicker" } %>
            <%= f.input :end_date,
                        as: :string,
                        placeholder: "Date fin",
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { class: "datepicker" } %>
            <%= f.input :description,
                        placeholder: "Description",
                        label: false,
                        required: true,
                        autofocus: true %> 
            <label class="file optional" for="event_picture"><i class="fas fa-file-image fa-5x"></i><br />Ajouter une photo</label>
            <%= f.input :picture_cache, as: :hidden %>
            <%= f.input :picture, label: false %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Créer l'événement", class:"btn-base btn-blue btn-large" %>
        </div>
      <% end %>
    </div>
</div>  